<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainMenuController" prefWidth="400" prefHeight="300" styleClass="background">
    <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
        <Label text="Typing Speed Game" styleClass="title"/>
        <ComboBox fx:id="durationBox" prefWidth="200"/>
        <Button text="Jugar" onAction="#onStartGame" prefWidth="120"/>
        <Button text="Salir" onAction="#onExit" prefWidth="120"/>
    </VBox>
</AnchorPane>
